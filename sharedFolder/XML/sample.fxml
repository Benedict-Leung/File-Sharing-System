<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TreeTableView?>

<GridPane minWidth="600" minHeight="700" fx:id="container" fx:controller="sample.Controller" xmlns:fx="http://javafx.com/fxml">
    <HBox GridPane.rowIndex="0" GridPane.columnIndex="0">
        <Button fx:id="download" >Download</Button>
        <Button fx:id="upload">Upload</Button>
    </HBox>

    <TreeTableView prefWidth="300" prefHeight="700" fx:id="clientFolder" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TreeTableView prefWidth="300" prefHeight="700" fx:id="serverFolder" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
</GridPane>